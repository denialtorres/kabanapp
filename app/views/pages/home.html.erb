      </div>
  <% else %>
    <div class="w-100 text-center mb-2">
      <%= link_to "Log In", new_user_session_path, class: "btn custom-btn w-50" %>
    </div>
  <% end %>

  <div class="w-100 text-center">
    <%= link_to "API Docs", "/api-docs", class: "btn custom-btn w-50" %>
  </div>
</div>

