<h1>Board</h1>

<table class='table'>
  <thead>
    <th>User</th>
    <th>Name</th>

    <th colspan=3>Actions</th>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.user_id %></td>
        <td><%= board.name %></td>

        <td><%= link_to "Show", board_path(board) %></td>
        <td><%= link_to "Edit", edit_board_path(board) %></td>
        <td>
          <%= link_to "Delete", board_path(board),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>